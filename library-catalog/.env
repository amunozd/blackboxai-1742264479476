# Application
NODE_ENV=development
PORT=3000
HOST=localhost
BASE_URL=http://localhost:3000
TZ=America/Mexico_City

# Database
DB_HOST=localhost
DB_PORT=3306
DB_NAME=library_catalog
DB_USER=root
DB_PASSWORD=
DB_DIALECT=mysql

# Session
SESSION_SECRET=your-super-secret-session-key
SESSION_NAME=library_session

# JWT
JWT_SECRET=your-super-secret-jwt-key
JWT_EXPIRATION=24h

# Security
BCRYPT_ROUNDS=10
ALLOWED_ORIGINS=http://localhost:3000

# Mail
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_SECURE=false
MAIL_USER=your-email@gmail.com
MAIL_PASSWORD=your-email-password
MAIL_FROM=Library Catalog <noreply@library.com>

# Development Mail (Ethereal)
DEV_MAIL_USER=your-ethereal-email
DEV_MAIL_PASS=your-ethereal-password

# Logging
LOG_LEVEL=debug

# AWS (for production backups)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
BACKUP_BUCKET=your-backup-bucket

# CDN (for production)
CDN_URL=https://your-cdn-url.com

# Analytics
GA_TRACKING_ID=your-ga-tracking-id

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Cache
CACHE_TTL=600
CACHE_CHECK_PERIOD=60

# Feature Flags
FEATURE_MAINTENANCE=false
FEATURE_ANALYTICS=true

# API Documentation
API_DOCS_ENABLED=true
API_DOCS_PATH=/api-docs