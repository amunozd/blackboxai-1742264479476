{
  "colors": {
    "primary": "#0284c7",
    "secondary": "#64748b",
    "success": "#059669",
    "danger": "#dc2626",
    "warning": "#d97706",
    "info": "#0891b2",
    "light": "#f1f5f9",
    "dark": "#1e293b",
    "white": "#ffffff",
    "black": "#000000"
  },
  "background": {
    "primary": "#ffffff",
    "secondary": "#f8fafc",
    "tertiary": "#f1f5f9"
  },
  "text": {
    "primary": "#1e293b",
    "secondary": "#64748b",
    "muted": "#94a3b8"
  },
  "border": {
    "color": "#e2e8f0",
    "radius": "0.375rem"
  },
  "shadow": {
    "sm": "0 1px 2px 0 rgb(0 0 0 / 0.05)",
    "md": "0 4px 6px -1px rgb(0 0 0 / 0.1)",
    "lg": "0 10px 15px -3px rgb(0 0 0 / 0.1)"
  },
  "font": {
    "family": {
      "sans": "ui-sans-serif, system-ui, -apple-system, sans-serif",
      "serif": "ui-serif, Georgia, Cambria, serif",
      "mono": "ui-monospace, SFMono-Regular, Menlo, monospace"
    },
    "size": {
      "xs": "0.75rem",
      "sm": "0.875rem",
      "base": "1rem",
      "lg": "1.125rem",
      "xl": "1.25rem",
      "2xl": "1.5rem",
      "3xl": "1.875rem",
      "4xl": "2.25rem"
    },
    "weight": {
      "light": "300",
      "normal": "400",
      "medium": "500",
      "semibold": "600",
      "bold": "700"
    }
  },
  "spacing": {
    "0": "0",
    "1": "0.25rem",
    "2": "0.5rem",
    "3": "0.75rem",
    "4": "1rem",
    "5": "1.25rem",
    "6": "1.5rem",
    "8": "2rem",
    "10": "2.5rem",
    "12": "3rem",
    "16": "4rem"
  },
  "transition": {
    "duration": "150ms",
    "timing": "cubic-bezier(0.4, 0, 0.2, 1)"
  },
  "input": {
    "background": "#ffffff",
    "border": "#e2e8f0",
    "focus": "#0284c7",
    "placeholder": "#94a3b8"
  },
  "button": {
    "primary": {
      "background": "#0284c7",
      "hover": "#0369a1",
      "text": "#ffffff"
    },
    "secondary": {
      "background": "#64748b",
      "hover": "#475569",
      "text": "#ffffff"
    },
    "success": {
      "background": "#059669",
      "hover": "#047857",
      "text": "#ffffff"
    },
    "danger": {
      "background": "#dc2626",
      "hover": "#b91c1c",
      "text": "#ffffff"
    }
  },
  "table": {
    "header": "#f8fafc",
    "border": "#e2e8f0",
    "hover": "#f1f5f9"
  },
  "card": {
    "background": "#ffffff",
    "border": "#e2e8f0",
    "shadow": "0 1px 3px 0 rgb(0 0 0 / 0.1)"
  },
  "navbar": {
    "background": "#ffffff",
    "border": "#e2e8f0",
    "text": "#1e293b"
  },
  "sidebar": {
    "background": "#ffffff",
    "border": "#e2e8f0",
    "text": "#1e293b",
    "active": "#f1f5f9"
  }
}