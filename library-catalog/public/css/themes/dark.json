{
  "colors": {
    "primary": "#0ea5e9",
    "secondary": "#94a3b8",
    "success": "#10b981",
    "danger": "#ef4444",
    "warning": "#f59e0b",
    "info": "#06b6d4",
    "light": "#1e293b",
    "dark": "#f8fafc",
    "white": "#000000",
    "black": "#ffffff"
  },
  "background": {
    "primary": "#0f172a",
    "secondary": "#1e293b",
    "tertiary": "#334155"
  },
  "text": {
    "primary": "#f8fafc",
    "secondary": "#cbd5e1",
    "muted": "#64748b"
  },
  "border": {
    "color": "#334155",
    "radius": "0.375rem"
  },
  "shadow": {
    "sm": "0 1px 2px 0 rgb(0 0 0 / 0.25)",
    "md": "0 4px 6px -1px rgb(0 0 0 / 0.3)",
    "lg": "0 10px 15px -3px rgb(0 0 0 / 0.35)"
  },
  "font": {
    "family": {
      "sans": "ui-sans-serif, system-ui, -apple-system, sans-serif",
      "serif": "ui-serif, Georgia, Cambria, serif",
      "mono": "ui-monospace, SFMono-Regular, Menlo, monospace"
    },
    "size": {
      "xs": "0.75rem",
      "sm": "0.875rem",
      "base": "1rem",
      "lg": "1.125rem",
      "xl": "1.25rem",
      "2xl": "1.5rem",
      "3xl": "1.875rem",
      "4xl": "2.25rem"
    },
    "weight": {
      "light": "300",
      "normal": "400",
      "medium": "500",
      "semibold": "600",
      "bold": "700"
    }
  },
  "spacing": {
    "0": "0",
    "1": "0.25rem",
    "2": "0.5rem",
    "3": "0.75rem",
    "4": "1rem",
    "5": "1.25rem",
    "6": "1.5rem",
    "8": "2rem",
    "10": "2.5rem",
    "12": "3rem",
    "16": "4rem"
  },
  "transition": {
    "duration": "150ms",
    "timing": "cubic-bezier(0.4, 0, 0.2, 1)"
  },
  "input": {
    "background": "#1e293b",
    "border": "#334155",
    "focus": "#0ea5e9",
    "placeholder": "#64748b"
  },
  "button": {
    "primary": {
      "background": "#0ea5e9",
      "hover": "#0284c7",
      "text": "#f8fafc"
    },
    "secondary": {
      "background": "#94a3b8",
      "hover": "#64748b",
      "text": "#f8fafc"
    },
    "success": {
      "background": "#10b981",
      "hover": "#059669",
      "text": "#f8fafc"
    },
    "danger": {
      "background": "#ef4444",
      "hover": "#dc2626",
      "text": "#f8fafc"
    }
  },
  "table": {
    "header": "#1e293b",
    "border": "#334155",
    "hover": "#334155"
  },
  "card": {
    "background": "#1e293b",
    "border": "#334155",
    "shadow": "0 1px 3px 0 rgb(0 0 0 / 0.3)"
  },
  "navbar": {
    "background": "#0f172a",
    "border": "#334155",
    "text": "#f8fafc"
  },
  "sidebar": {
    "background": "#0f172a",
    "border": "#334155",
    "text": "#f8fafc",
    "active": "#1e293b"
  }
}